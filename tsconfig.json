{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@patch/*": [
        "src/modules/patch/*"
      ],
      "@patcher/*": [
        "src/modules/patcher/*"
      ],
      "@legacy/*": [
        "src/legacy/*"
      ],
      "@legacy/patch/*": [
        "src/legacy/modules/patch/*"
      ],
      "@legacy/patcher/*": [
        "src/legacy/modules/patcher/*"
      ]
    }
  }
}
